#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<HomeConstructor>:
    orientation: 'vertical'
    padding: [20, 20, 20, 20]  # [left, top, right, bottom]
    spacing: 10
    
    canvas.before:
        Color:
            rgba: PRIMARY
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        spacing: 10
        
        StyledButton:
            text: 'logout'
            size_hint: (0.2, 0.8)
            pos_hint: {'center_y': 0.5}
            font_size: self.height * 0.4
            on_press: root.logout()
            
        Widget:
            size_hint_x: 0.6
            
        StyledButton:
            text: 'profile'
            size_hint: (0.2, 0.8)
            pos_hint: {'center_y': 0.5}
            font_size: self.height * 0.4
            on_press: root.go_to_profile()

    StyledBoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.9
        padding: [20, 20, 20, 20]  # [left, top, right, bottom]
        spacing: 15

        TitleLabel:
            text: 'dont you dare go hollow'
            size_hint_y: 0.2

        Widget:
            size_hint_y: 0.2
        StyledButton:
            text: 'new diary entry'
            size_hint_y: 0.1
            size_hint_x: 0.6
            pos_hint: {'center_x': 0.5}
            on_press: root.go_to_diary()

        Widget:
            size_hint_y: 0.01

        StyledButton:
            text: 'view entries'
            size_hint_y: 0.1
            size_hint_x: 0.6
            pos_hint: {'center_x': 0.5}
            on_press: root.go_to_history()
        Widget:
            size_hint_y:0.5

