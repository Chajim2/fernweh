#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<RequestLabel@StyledLabel>:
    size_hint_y: None
    height: dp(50)
    canvas.before:
        Color:
            rgba: SECONDARY
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<FriendLabel@StyledLabel>:
    size_hint_y: None
    height: dp(50)
    canvas.before:
        Color:
            rgba: SECONDARY
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<ProfileScreen>:
    canvas.before:
        Color:
            rgba: PRIMARY
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        # Top navigation bar
        BoxLayout:
            size_hint_y: 0.1
            spacing: dp(10)
            
            StyledButton:
                text: "Home"
                size_hint_x: 0.2
                font_size: sp(20)
                on_press: root.go_to_home()
            
            Widget:
                size_hint_x: 0.8

        # Friend request input area
        BoxLayout:
            size_hint_y: 0.15
            spacing: dp(10)
            
            StyledTextInput:
                id: friend_input
                hint_text: "Enter friend's username"
                font_size: sp(18)
                size_hint_x: 0.7
            
            StyledButton:
                text: "Add Friend"
                size_hint_x: 0.3
                font_size: sp(18)
                on_press: root.send_friend_request(friend_input.text)

        # Friends List Section
        StyledLabel:
            text: "Friends List"
            font_size: sp(24)
            size_hint_y: 0.1
            halign: 'left'

        ScrollView:
            size_hint_y: 0.3
            BoxLayout:
                id: friends_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)

        # Friend Requests Section
        StyledLabel:
            text: "Friend Requests"
            font_size: sp(24)
            size_hint_y: 0.1
            halign: 'left'

        ScrollView:
            size_hint_y: 0.3
            BoxLayout:
                id: requests_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
        
        
