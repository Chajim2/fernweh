#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT



<ConfirmationScreen>:
    canvas.before:
        Color:
            rgba: PRIMARY
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: SECONDARY
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15, 15, 15, 15]

        Label:
            text: 'Confirm Your Entry'
            size_hint_y: 0.1
            font_name: 'Bold'
            font_size: self.height * 0.5
            color: TEXT

        ScrollView:
            size_hint_y: 0.4
            Label:
                id: diary_preview
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                color: TEXT

        Label:
            id: emotions_summary
            size_hint_y: 0.3
            text: 'Selected emotions:'
            text_size: self.width, None
            halign: 'left'
            valign: 'top'
            color: TEXT

        BoxLayout:
            size_hint_y: 0.2
            spacing: 10

            Button:
                text: 'Go Back'
                background_color: SECONDARY
                color: TEXT
                font_name: "Regular"
                on_press: root.go_back()

            Button:
                text: 'Confirm'
                background_color: PRIMARY
                color: TEXT
                font_name: "Regular"
                on_press: root.confirm_entry()