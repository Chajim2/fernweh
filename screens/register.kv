#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<RegisterScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: PRIMARY
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        Widget:
            size_hint_y: 0.1  # Add some space at the top

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            pos_hint: {'center_x': 0.5}
            spacing: dp(2)

            StyledLabel:
                text: "Username"
                font_size: sp(24)
                size_hint_y: None
                height: dp(40)
            
            StyledTextInput:
                id: username
                hint_text: "username"
                font_size: sp(18)
                size_hint_y: None
                height: dp(80)
                color: TEXT

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            pos_hint: {'center_x': 0.5}
            spacing: dp(2)

            StyledLabel:
                text: "Password"
                font_size: sp(24)
                size_hint_y: None
                height: dp(40)
            
            StyledTextInput:
                id: password
                password: True
                hint_text: "password"
                font_size: sp(18)
                size_hint_y: None
                height: dp(80)
                color: TEXT

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            pos_hint: {'center_x': 0.5}
            spacing: dp(2)

            StyledLabel:
                text: "Confirm Password"
                font_size: sp(24)
                size_hint_y: None
                height: dp(40)
            
            StyledTextInput:
                id: confirm_password
                password: True
                hint_text: "confirm password"
                font_size: sp(18)
                size_hint_y: None
                height: dp(80)
                color: TEXT

        Widget:
            size_hint_y: 0.2

        StyledButton:
            text: "Register"
            font_size: sp(20)
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5}
            on_press: root.register()

        Widget:
            size_hint_y: 0.6
        
        StyledLabel:
            text: "Already have an account?"
            font_size: sp(18)
            size_hint_y: None
            height: dp(40)
            pos_hint: {'center_x': 0.5}
        
        StyledButton:
            text: "Login"
            font_size: sp(18)
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5}
            on_press: root.to_login()

        Widget:
            size_hint_y: 0.3  # Add some space at the bottom