#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT
#:import dp kivy.metrics.dp

<RegisterScreen>:
    BoxLayout:
        cols: 1
        canvas.before:
            Color:
                rgba: PRIMARY
            Rectangle:
                pos: self.pos
                size: self.size

        orientation:"vertical"
        Label:
            text: "Username"
            font_size: Window.height/28
            size_hint_y : 0.08
            font_name: "Regular"
            color: TEXT
            text_size: self.size
            halign: 'center'
            padding: [Window.width/60, 0, 0,0]
        
        TextInput:
            id: username
            width : 400
            hint_text: "username"
            font_name: "Regular"
            font_size: Window.height/35
            #size: dp(20), dp(4)
            size_hint_y: 0.05
            size_hint_x: 0.5
            multiline: False
            background_color: SECONDARY
            foreground_color: TEXT
            pos_hint: {"center_x" : 0.5}
        
        Label:
            text: "password"
            font_size: Window.height/28
            size_hint_y : 0.08
            font_name: "Regular"
            color: TEXT
            text_size: self.size
            halign: 'center'
            padding: [Window.width/60, 0, 0,0]
        
        TextInput:
            id: password
            width: 400
            hint_text: "password"
            font_name: "Regular"
            font_size: Window.height/35
           #size: dp(20), dp(4)
            size_hint_y: 0.05
            size_hint_x: 0.5
            multiline: False
            background_color: SECONDARY
            foreground_color: TEXT
            pos_hint: {"center_x" : 0.5}
        Widget:
            id: text_button_seperator
            size_hint_y: 0.03

        Button:
            id: login_button
            background_color: 0, 0, 0, 0 
            canvas.before:
                Color:
                    rgba: PRIMARY
                Rectangle: 
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: ACCENT
                Line:
                    width: 2  
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 10, 10)
            font_name: "Bold"
            font_size: Window.height/30
            color: TEXT
            text: "register"
            size_hint_y: 0.08
            pos_hint: {"center_x" : 0.5}
            size_hint_x: 0.5
            on_press: root.register()

        Widget:
            size_hint_y: 0.1
        
        Label:
            text: "already registered?"
            font_size: Window.height/36
            size_hint_y : 0.08
            font_name: "Regular"
            color: TEXT
            text_size: self.size
            halign: 'center'
            padding: [Window.width/60, 0, 0,0]
        
        Widget:
            size_hint_y: 0.1
        
        Button:
            id: login_button
            background_color: 0, 0, 0, 0 
            canvas.before:
                Color:
                    rgba: PRIMARY
                Rectangle: 
                    pos: self.pos
                    size: self.size
                Color:
                    rgba: ACCENT
                Line:
                    width: 2  
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 10, 10)
            font_name: "Bold"
            font_size: Window.height/34
            color: TEXT
            text: "login"
            size_hint_y: 0.06
            pos_hint: {"center_x" : 0.5}
            size_hint_x: 0.4
            on_press: root.to_login()

        Widget:
            size_hint_y: 0.1