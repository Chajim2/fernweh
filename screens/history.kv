#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT
#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<PostPanel>: 

<HistoryConstructor>:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: PRIMARY
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: 0.1
        spacing: dp(10)
        
        StyledButton:
            text: "Home"
            size_hint_x: 0.2
            font_size: sp(20)
            on_press: root.go_home()
        
        Widget:
            size_hint_x: 0.8

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)

        StyledLabel:
            text: 'Your Past Entries'
            size_hint_y: None
            height: dp(40)
            font_size: sp(20)
            halign: 'left'

        ScrollView:
            id: main_scroll
            size_hint_y: 0.8
            do_scroll_x: False
            bar_width: dp(10)

            BoxLayout:
                id: entries_container
                orientation: "vertical"
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height

<HistoryScreen>:
    name: 'history'
    HistoryConstructor:
        id: history_constructor