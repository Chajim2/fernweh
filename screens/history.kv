#:import Window kivy.core.window.Window
#:import PRIMARY utils.loading.PRIMARY
#:import SECONDARY utils.loading.SECONDARY
#:import ACCENT utils.loading.ACCENT
#:import TEXT utils.loading.TEXT

<HistoryConstructor>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    
    canvas.before:
        Color:
            rgba: PRIMARY
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15
        canvas.before:
            Color:
                rgba: SECONDARY
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15, 15, 15, 15]

        Label:
            text: 'Your Past Entries'
            size_hint_y: 0.1
            font_name: 'Bold'
            font_size: self.height * 0.5
            color: TEXT

        ScrollView:
            size_hint_y: 0.8
            do_scroll_x: False
            
            Label:
                id: entries_label
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                padding: 10, 10
                color: TEXT
                markup: True  # Enable markup for bold text
                halign: 'left'
                valign: 'top'
                font_name: "Regular"

        Button:
            text: 'Back to Home'
            size_hint_y: 0.1
            background_color: ACCENT
            color: TEXT
            font_name: "Regular"
            on_press: root.go_home()

<HistoryScreen>:
    HistoryConstructor: 